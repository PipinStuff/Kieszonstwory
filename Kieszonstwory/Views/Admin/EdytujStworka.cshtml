@model Kieszonstwory.Models.DzikiStwor

@{
    ViewData["Title"] = "Edytuj Stworka";
}

<div class="container mt-5">
    <h2>Edytuj stworka</h2>
    <form asp-action="EdytujStworka" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nazwa"></label>
            <input asp-for="Nazwa" class="form-control" />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="BaseMoc">Bazowa Moc</label>
            <input asp-for="BaseMoc" class="form-control" />
            <span asp-validation-for="BaseMoc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BaseHP">Bazowe HP</label>
            <input asp-for="BaseHP" class="form-control" />
            <span asp-validation-for="BaseHP" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Obrazek">URL obrazka</label>
            <input asp-for="Obrazek" class="form-control" />
        </div>
        <input asp-for="Poziom" type="hidden" value="1" />

        <div class="form-group">
            <label asp-for="TypStworaId">Typ</label>
            <select asp-for="TypStworaId" class="form-control" asp-items="ViewBag.Typy"></select>
        </div>

        <div class="form-group">
            <label asp-for="LokalizacjaId">Lokalizacja</label>
            <select asp-for="LokalizacjaId" class="form-control" asp-items="ViewBag.Lokalizacje"></select>
        </div>

        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
